#! /bin/bash

# determine the OS
# use a switch statement to determine command

GROUP=$(egrep -i "svadmin |carpadmin" /etc/group)
echo $GROUP

OS=$(uname -o)

case $OS in
    GNU/Linux)
	echo "OS is $OS"
#	reset user passwd
	;;
#   Solaris)
#	;;
#   RHEL)
#	;;
#   SuSe)
#	;;
    *)
	echo "$OS is unsupported at this time!"
	;;
esac
